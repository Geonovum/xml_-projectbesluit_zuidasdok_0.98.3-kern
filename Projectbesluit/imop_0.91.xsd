            <xs:extension base="imop:containerBaseType">
                <xs:sequence>
                    <!-- group maken tbv uitbreidbaarheid? -->
                    <xs:choice>
                        <xs:element ref="imop:Regeling"/>
                        <xs:element ref="imop:Tekst"/>
                    </xs:choice>
                    <xs:element ref="imop:Nawerk" minOccurs="0"/>
